
<div class="container">
  <form>
    <div class="form-row">
      <div class="form-group col-md-4">
        <p>
          <%= image_tag @user.image_url.to_s, {:style=>"width:300px;height:250px"} %>
        </p>
      </div>
      <div class="form-group col-md-6">
        <br>
        <br>
        <p>
          <strong>Name:</strong>
          <%= @user.name %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @user.address %>
        </p>

        <p>
          <strong>Phone:</strong>
          <%= @user.phone %>
        </p>

        <p>
          <strong>Date:</strong>
          <%= @user.date %>
        </p>
        <% if current_user.admin %>
          
       <% else %>
        <p>
          <strong>Các khóa học đã đăng ký:</strong>
            
            <% @detail_courses.each do |detail| %>
              <% if current_user.name == detail.user.name %>
                <%= detail.cour.name %>
              <% end %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
  </form>
</div>


<%= link_to 'Edit', edit_user_path(@user) %> |
<% if current_user.admin %>
  <%= link_to 'Back', admin_path %>
<% else %>
  <%= link_to 'Back', root_url %>
<% end %>

<style>
  p {
    margin: 0 0 10px;
    font-size: 20px;
  }
</style>

