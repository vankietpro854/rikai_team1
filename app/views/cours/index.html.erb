<p id="notice"><%= notice %></p>


<h1 align="center">DANH SÁCH KHÓA HỌC</h1>
<%= link_to 'Tạo khóa học mới', new_cour_path %>
<hr>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>#</th>
      <th>Tên khóa học</th>
      <th>Sơ lược</th>
      <th>Thời gian học</th>
      <% if current_user.admin? %>
      <th class="text-center">Edit</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cours.each do |cour| %>
      <tr>
        <td><%= cour.id %></td>
        <td><%= cour.name %></td>
        <td><%= raw(cour.content) %></td>
        <td><%= cour.time_learn %> month </td>
        <% if current_user.admin? %>
        <td class="text-center">
          <%= link_to 'Show', cour %> |
          <%= link_to 'Edit', edit_cour_path(cour) %> |
          <%= link_to 'Destroy', cour, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
