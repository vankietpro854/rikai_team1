<form>
  <div class="form-row">
    <div class="form-group col-md-3">
      <div class="card">
        <ul class="list-group list-group-flush">
          <div class="card-header text-center" style="font-size: 20px">
              Thông tin tất cả tài khoản
          </div>
          <li class="list-group-item">
            <% @users.each do |user| %>
              <%= image_tag user.image_url.to_s, {:style=>"width:100px;height:100px"} %>
              <span style="font-size: 20px"><%= user.name %></span>
              <p class="text-center" style="font-size:16px; color: green;">
                <br>
                    <%= link_to "Show", user %> |
                    <%= link_to "Edit", edit_user_path(user) %> |
                    <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" }%>
              </p>
              <hr>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <!-- ----------------------------------- -->
    <div class="form-group col-md-3">
      <div class="card">
        <ul class="list-group list-group-flush">
          <div class="card-header text-center" style="font-size: 20px">
            Báo cáo của người dùng
          </div>
          <li class="list-group-item">
            <% @reports.each do |report| %>
                <p style="font-size: 20px">
                  <%= report.user.name %> 
                </p>
                <p style="font-size: 15px">
                  <%= report.title %> 
                </p>
                <p class="text-right"><%= link_to "Show", report%></p>
              
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <!-- ----------------------------------- -->
    <div class="form-group col-md-4">
      <div class="card">
        <ul class="list-group list-group-flush">
          <div class="card-header text-center" style="font-size: 20px">
            Quản lý khóa học
          </div>
          <li class="list-group-item">
            <% @detail_courses.each do |detail_course| %>
              <p style="font-size: 18px">
                  Người đăng ký: <%= detail_course.user.name %> | Khóa học:  
                  <%= detail_course.cour.name %>
              </p>

             <p class="text-center" style="font-size:16px; color: green;">
              <br>
                  <%= link_to "Show", detail_course %> |
                  <%= link_to "Edit", edit_detail_course_path(detail_course) %> |
                  <%= link_to "Delete", detail_course, method: :delete, data: { confirm: "You sure?" }%>
              </p>
              <hr>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <!-- ----------------------------------- -->
    <div class="form-group col-md-2">
      <div class="card">
        <ul class="list-group list-group-flush">
          <div class="card-header text-center" style="font-size: 20px">
            Quản lý
          </div>
          <li class="list-group-item">
            <p class="text-center" style="font-size:16px;">
                  <%= link_to "Thêm tài khoản người dùng", sign_up_path, { :class=>"nav-link" } %>
                  <%= link_to "Danh sách khóa học", cours_path, { :class=>"nav-link" } %>
                  <%= link_to "Danh sách chương", chapters_path, { :class=>"nav-link" } %>
                  <%= link_to "Đăng ký khóa học", new_detail_course_path, { :class=>"nav-link" } %>
                  <%= link_to "Phản hồi người dùng", suports_path, { :class=>"nav-link" } %>
            </p>
          </li>
        </ul>
      </div>
    </div>

  </div>
</form>
<%= will_paginate @users %>