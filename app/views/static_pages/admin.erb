<<form>
  <div class="form-row">
    <div class="form-group col-md-3">
      <% provide(:title, 'All users') %>
      <h1 align="center">Thông tin tất cả tài khoản</h1>
      <%= will_paginate @users%>
      <ul class="users">
        <% @users.each do |user| %>
          <li>
            <%= image_tag user.image_url.to_s, {:style=>"width:100px;height:100px"} %>
            <%= link_to user.name, user, {:style=>"font-size:20px"} %>
            <p class="text-center" style="font-size:16px; color: green;">
              <% if current_user.admin? && !current_user?(user) %>
                  <%= link_to "Show", current_user %> |
                  <%= link_to "Edit", edit_user_path(current_user) %> |
                  <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %>
              <% end %>
            </p>
          </li>
        <% end %>
      </ul>
      <%= will_paginate @users %>
    </div>
    <!-- ----------------------------------- -->
    <div class="form-group col-md-3">
      <% provide(:title, 'All users') %>
      <h1 align="center">Báo cáo của người dùng</h1>
      <%= will_paginate @users%>
      <ul class="users">
        <% @users.each do |user| %>
          <li>
          </li>
        <% end %>
      </ul>
      <%= will_paginate @users %>
    </div>
    <!-- ----------------------------------- -->
    <div class="form-group col-md-3">
      <% provide(:title, 'All users') %>
      <h1 align="center">Chi tiết khóa học</h1>
      <%= will_paginate @users%>
      <ul class="users">
        <% @users.each do |user| %>
          <li>
          </li>
        <% end %>
      </ul>
      <%= will_paginate @users %>
    </div>
    <!-- ----------------------------------- -->
    <div class="form-group col-md-3">
      <% provide(:title, 'All users') %>
      <h1 align="center">Quản lý</h1>
      <%= will_paginate @users%>
      <ul class="users">
          <li>
            <p class="text-center" style="font-size:16px;">
                  <%= link_to "Thêm tài khoản người dùng", sign_up_path, { :class=>"nav-link" } %>
                  <%= link_to "khóa học", cours_path, { :class=>"nav-link" } %>
                  <%= link_to "chương", chapters_path, { :class=>"nav-link" } %>
                  <%= link_to "Đăng ký khóa học", info_path, { :class=>"nav-link" } %>
            </p>
          </li>
      </ul>
      <%= will_paginate @users %>
    </div>

  </div>
</form>
