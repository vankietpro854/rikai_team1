<form>
  <div class="form-row">
    <div class="form-group col-md-8 col-md-offset-2 ">
      <div style="text-align: -webkit-center;">
            <%= form_tag(admin_path, method: :get) do %>
            <%= text_field_tag :timkiem , params[:timkiem] %>
            <div style="text-align: -webkit-center; width: 100%;"> <%= submit_tag 'Tìm kiếm', name: nil %> </div>     
            <% end %>
            <hr>  
      </div>
      <div class="card" id="tk">
        <ul class="list-group list-group-flush">
          <div class="card-header text-center" style="font-size: 20px">
              Thông tin tất cả tài khoản
          </div>
          <li class="list-group-item">
            <% @users.each do |user| %>
              <%= image_tag user.image_url.to_s, {:style=>"width:100px;height:100px"} %>
              <span style="font-size: 20px"><%= user.name %></span>
              <p class="text-center" style="font-size:16px; color: green;">
                <br>
                    <%= link_to "Show", user %> |
                    <%= link_to "Edit", edit_user_path(user) %> 
                    <% if current_user.admin? && !current_user?(user) %>
                      | <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" }%>
                    <% end %>
              </p>
              <hr>
            <% end %>
          </li>
        </ul>
      </div>

      <div class="card" id="bc">
        <ul class="list-group list-group-flush">
          <div class="card-header text-center" style="font-size: 20px">
            Báo cáo của người dùng
          </div>
          <li class="list-group-item">
            <% @reports.each do |report| %>
                <p style="font-size: 20px">
                  <%= report.user.name %>
                </p>
                <p style="font-size: 15px">
                  <%= report.title %>
                </p>
                <p class="text-right"><%= link_to "Show", report%></p>
                <hr>
            <% end %>
          </li>
        </ul>
      </div>

      <div class="card" id="kh">
        <ul class="list-group list-group-flush">
          <div class="card-header text-center" style="font-size: 20px">
            Quản lý khóa học
          </div>
          <li class="list-group-item">
            <% @detail_courses.each do |detail_course| %>
              <p style="font-size: 18px">
                  Người đăng ký: <%= detail_course.user.name %> | Khóa học:
                  <%= detail_course.cour.name %>
              </p>

             <p class="text-center" style="font-size:16px; color: green;">
              <br>
                  <%= link_to "Show", detail_course %> |
                  <%= link_to "Edit", detail_course_path(detail_course) %> |
                  <%= link_to "Delete", detail_course, method: :delete, data: { confirm: "You sure?" }%>
              </p>
              <hr>
            <% end %>
          </li>
        </ul>

      </div>
    </div>

    <div class="form-group col-md-2">
      <div class="card">
        <ul class="list-group list-group-flush">
          <div class="card-header text-center" style="font-size: 20px">
            Quản lý
          </div>
          <li class="list-group-item">
            <p class="text-center" style="font-size:16px;">
                  <%= link_to "Thêm tài khoản người dùng", sign_up_path, { :class=>"nav-link" } %>
                  <%= link_to "Khóa học", cours_path, { :class=>"nav-link" } %>
                  <%= link_to "Sách chương", chapters_path, { :class=>"nav-link" } %>
                  <%= link_to "Đăng ký khóa học", new_detail_course_path, { :class=>"nav-link" } %>
                  <%= link_to "Phản hồi người dùng", suports_path, { :class=>"nav-link", :style=>"margin-bottom: -4%;" } %>
                  <div class="nav-link text-center th" id="nguoidung">Báo cáo</div>
                  <div class="nav-link text-center th" id="khoahoc">Khóa học</div>
                  <div class="nav-link text-center th" id="taikhoan">Tài khoản người dùng</div>
            </p>
          </li>
        </ul>
      </div>
    </div>

  </div>
</form>

<script>
$(document).ready(function(){
  $("#taikhoan").click(function(){
    $("#tk").show();
    $("#bc").hide();
    $("#kh").hide();
  });
  $("#nguoidung").click(function(){
    $("#tk").hide();
    $("#bc").show();
    $("#kh").hide();
  });
  $("#khoahoc").click(function(){
    $("#tk").hide();
    $("#bc").hide();
    $("#kh").show();
  });
});
</script>
